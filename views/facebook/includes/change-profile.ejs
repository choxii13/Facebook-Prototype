<dialog id="change-profile" class="modal" close>
  <form action="/facebook/changing-profile?_csrf=<%=locals.csrfToken%>" method="POST" enctype="multipart/form-data">
    <div class="creating-post">
      <p> Change Profile Picture </p>
      <p class="pos-ab" id="close-change-dp"> X </p>
      <hr>
      <div class="creating-post-profile">
        <img src="<%=userProfile.userProfile%>">
        <div class="creating-post-profile-name">
          <p>
            <%=userProfile.firstName%> <%=userProfile.lastName%>
          </p>
          <div class="creating-post-profile-friends">
            <img id="profile-friends" src="/styles/main-facebook/images/friendss.png">
            <p> Friends</p>
          </div>
        </div>
      </div>
      <img src="" id="change-image-preview">
      <input type="file" id="change-image" name="image" accept="image/png, image/jpeg, image/jpg, image/svg" required>
      <button> Change Profile Picture </button>
    </div>
  </form>
</dialog>