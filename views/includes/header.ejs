<header class="header">

    <div class="left-section">
        <img src="styles/main-facebook/images/facebook.png" class="img-facebook">
        <div class="left-section-search-facebook">
            <img src="styles/main-facebook/images/search.png" class="img-search">
            <input type="text" placeholder="Search Facebook">
        </div>
    </div>
    <div class="middle-section">
        <div class="middle-section-container">
            <img src="styles/main-facebook/images/home.png" class="img-home">
            <p>Home</p>
        </div>
        <div class="middle-section-container">
            <img src="styles/main-facebook/images/marketplace.png" class="img-marketplace">
            <p>Marketplace</p>
        </div>
        <div class="middle-section-container">
            <img src="styles/main-facebook/images/group.png" class="img-group">
            <p>Groups</p>
        </div>
        <div class="middle-section-container">
            <img src="styles/main-facebook/images/gaming.png" class="img-gaming">
            <p>Gaming</p>
        </div>
    </div>
    <div class="right-section">
        <div class="right-section-container">
            <img src="styles/main-facebook/images/plus.png" class="img-plus">
            <p> Create</p>
        </div>
        <div class="right-section-container">
            <img src="styles/main-facebook/images/message.png" class="img-message">
            <p> Messenger</p>
        </div>
        <div class="right-section-container">
            <img src="styles/main-facebook/images/notif.png" class="img-notif">

            <p>Notifications</p>

        </div>
        <div class="right-section-container">
            <img src="<%=user.imagePath%>" class="img-joshua">
            <p>Profile</p>
            <div class="options">
                <ul>
                    <li>
                        <form action="/logout" method="POST"> <button> Logout </button></form>
                    </li>
                    <li> <button> Change Name </button></li>
                    <li> <button id="open-change-dp"> Change Profile Picture </button></li>
                </ul>
            </div>
        </div>
    </div>

</header>