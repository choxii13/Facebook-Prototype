    <div class="main-div-second-layer-profile">
        <div class="main-div-second-layer-profile-a">
            <img src="/styles/main-facebook/images/Aamon.jpg">
            <div class="main-div-second-layer-profile-b">
                <p class="name-josh">
                    <%=postDetail.name%>
                </p>
                <div class="main-div-second-layer-profile-c">
                    <p class="hours">
                        <%=postDetail.date%>
                    </p>
                    <img src="/styles/main-facebook/images/friendss.png">
                </div>
            </div>
        </div>
        <div class="main-div-second-layer-profile-dot-image">
            <img src="/styles/main-facebook/images/3-dot.png">
            <img src="styles/main-facebook/images/close.png">
        </div>
    </div>
    <p>
        <%=postDetail.content%>
    </p>
    <img src=" <%=postDetail.imagePath%>" id="post-image">
    <div class="main-div-second-layer-container">
        <div class="main-div-second-layer-heart-like">
            <img src="/styles/main-facebook/images/heart.png">
